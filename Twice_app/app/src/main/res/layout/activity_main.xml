<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/member_1"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/member_1" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/member_2"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/member_2" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/member_3"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/member_3" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/member_4"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/member_4" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/member_5"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/member_5" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/member_6"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/member_6" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
